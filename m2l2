import discord
import random
import time as t
import os
import asyncio
from discord.ext import commands
import requests

intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='-', intents=intents)

# Replace with your actual channel ID
CHANNEL_ID = 123456789012345678

@bot.event
async def on_ready():
    print(f'We have logged in as {bot.user}')

@bot.command()
async def hello(ctx):
    await ctx.send(f'Hi! I am a bot {bot.user}!')
    await ctx.send("ketik laut untuk cara mengurangi sampah di laut dan darat untuk cara mengurangi sampah di darat")

@bot.command()
async def laut(ctx):
    await ctx.send("cara mengurai atau mengurangi sampah di laut dengan teknologi atau pengangkatan sampah laut menggunakan alat alat khusus seperti kapal pengangkut sampah laut, jaring pengumpul sampah, dan teknologi daur ulang sampah laut. Selain itu, kita besa mendaur ulang sampah di laut menjadi berbagai hal seperti dinding, meja, dll.")

@bot.command()
async def darat(ctx):
    await ctx.send("cara mengurangi sampah di darat yaitu dengan cara memilah sampah organik dan anorganik. Sampah organik termasuk sebagai sampah bekas makanan seperti kulit buah, daun dapat dikomposkan sementara smapah anorganik termasuk sebagain sampah plastik,dll. sampah organik dapat dikompos dan sampah anorganik dapat di daur ulang.")

bot.run("ur token")
